<%- include('./header') -%>

    <div class="box" id="heading">
      <h1><%= title %></h1>
    </div>

    <div class="box">

      <% tasks.forEach(task => { %>
        <form action="/delete" method="post">
          <div class="item">
            <input type="checkbox" name="checkBox" value="<%= task._id %>" onChange="this.form.submit()" />
            <p><%= task.name %></p>
          </div>
          <input type="hidden" name="listName" value="<%= title %>">
        </form>
      <% }) %>

      <form class="item" action="/" method="post">
        <input
          type="text"
          name="task"
          placeholder="Enter Task:"
          autocomplete="off"
          required
        />
        <button type="submit" name="list" value="<%= title %>">+</button>
      </form>
    </div>

<%- include('./footer') -%>
  
